{
  "manifest_version": 3,
  "name": "野崎タイマー",
  "version": "1.0.0",
  "description": "野崎タイマーカウントダウン機能",
  "permissions": [
    "storage",
    "windows",
    "webRequest"
  ],
  "host_permissions": [
    "http://*/kcsapi/*",
    "https://*/kcsapi/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "野崎タイマー"
  }
}
